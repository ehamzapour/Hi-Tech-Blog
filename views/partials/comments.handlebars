<div class="comments">
  {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment card-body">
            <div class="text">
                {{commentBody}}
            </div>
            <div class="meta">
                -{{user.name}}, {{format_date dateCreated}}
            </div>
        </section>
    </div>
  {{/each}}
</div>